{
  "name": "marketpulse",
  "version": "1.0.0",
  "description": "Financial dashboard platform with real-time market data and customizable dashboards",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:client\" \"cd server && npm run dev\"",
    "dev:client": "vite",
    "dev:server": "cd server && npm run dev",
    "build": "tsc -b && vite build",
    "build:client": "tsc -b && vite build",
    "build:server": "cd server && npm run build",
    "build:all": "npm run build:client && npm run build:server",
    "preview": "vite preview",
    "start": "npm run build:all && concurrently \"npm run preview\" \"cd server && npm start\"",
    "type-check": "tsc --noEmit",
    "type-check:all": "npm run type-check && cd server && npm run type-check",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "lint:all": "npm run lint && cd server && npm run lint",
    "lint:fix:all": "npm run lint:fix && cd server && npm run lint:fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:all": "npm run format && cd server && npm run format",
    "format:check:all": "npm run format:check && cd server && npm run format:check",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:server": "cd server && npm test",
    "test:server:coverage": "cd server && npm run test:coverage",
    "test:all": "npm run test:coverage && npm run test:server:coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:accessibility": "axe-playwright",
    "test:performance": "lhci autorun",
    "test:comprehensive": "./scripts/test-all.sh",
    "validate:env": "./scripts/validate-env.sh",
    "deploy": "./scripts/deploy.sh",
    "deploy:dev": "./scripts/deploy.sh development",
    "deploy:staging": "./scripts/deploy.sh staging",
    "deploy:prod": "./scripts/deploy.sh production",
    "clean": "rm -rf dist node_modules/.vite server/dist",
    "clean:all": "npm run clean && rm -rf node_modules server/node_modules coverage server/coverage test-results playwright-report",
    "setup": "npm ci && cd server && npm ci && cd .. && npm run validate:env",
    "migrate": "cd server && npm run migrate",
    "seed": "cd server && npm run seed",
    "postinstall": "cd server && npm install && npx husky install",
    "prepare": "npx husky install"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.1",
    "@tanstack/react-query": "^5.51.23",
    "zustand": "^4.5.4",
    "zod": "^3.23.8",
    "framer-motion": "^11.3.24",
    "chart.js": "^4.4.3",
    "react-chartjs-2": "^5.2.0",
    "react-grid-layout": "^1.4.4",
    "socket.io-client": "^4.7.5",
    "date-fns": "^3.6.0",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.5.2"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/react-grid-layout": "^1.3.5",
    "@typescript-eslint/eslint-plugin": "^8.0.1",
    "@typescript-eslint/parser": "^8.0.1",
    "@vitejs/plugin-react": "^4.3.1",
    "typescript": "^5.5.3",
    "vite": "^5.4.1",
    "eslint": "^8.57.0",
    "globals": "^15.9.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.9",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.10",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.14",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.41",
    "@headlessui/react": "^2.1.2",
    "@heroicons/react": "^2.1.5",
    "vitest": "^2.0.5",
    "@vitest/ui": "^2.0.5",
    "@vitest/coverage-v8": "^2.0.5",
    "@testing-library/react": "^16.0.0",
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/user-event": "^14.5.2",
    "jsdom": "^24.1.1",
    "playwright": "^1.46.1",
    "@axe-core/playwright": "^4.9.0",
    "@lhci/cli": "^0.13.0",
    "concurrently": "^8.2.2",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.8"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}