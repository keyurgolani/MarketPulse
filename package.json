{
  "name": "marketpulse",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "./node_modules/.bin/vite",
    "build": "./node_modules/.bin/tsc -b && ./node_modules/.bin/vite build",
    "lint": "./node_modules/.bin/eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "./node_modules/.bin/eslint . --ext ts,tsx --fix",
    "format": "./node_modules/.bin/prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "./node_modules/.bin/prettier --check \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "type-check": "./node_modules/.bin/tsc --noEmit",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "./node_modules/.bin/vitest run --config vitest.config.ts src/",
    "test:backend": "cd server && npm test",
    "test:run": "./node_modules/.bin/vitest run",
    "test:coverage": "./node_modules/.bin/vitest run --coverage",
    "test:integration": "./node_modules/.bin/vitest run --config vitest.integration.config.ts",
    "test:e2e": "./node_modules/.bin/playwright test",
    "test:e2e:ui": "./node_modules/.bin/playwright test --ui",
    "test:websocket": "./scripts/test-websocket-integration.sh",
    "test:accessibility": "./scripts/test-accessibility.sh",
    "test:performance": "./scripts/test-performance.sh",
    "prepare": "echo 'Husky setup skipped for testing'",
    "preview": "./node_modules/.bin/vite preview"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.7",
    "@heroicons/react": "^2.2.0",
    "@tanstack/react-query": "^5.85.3",
    "chart.js": "^4.5.0",
    "chartjs-adapter-date-fns": "^3.0.0",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.1",
    "react": "^19.1.1",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^19.1.1",
    "react-router-dom": "^6.28.1",
    "socket.io-client": "^4.8.1",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.0.17",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.33.0",
    "@playwright/test": "^1.54.2",
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.3.0",
    "@types/puppeteer": "^7.0.4",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-v8": "^2.1.8",
    "autoprefixer": "^10.4.21",
    "axe-core": "^4.10.3",
    "eslint": "^9.33.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "happy-dom": "^15.11.6",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lighthouse": "^12.8.1",
    "lint-staged": "^15.2.10",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "puppeteer": "^24.16.2",
    "tailwindcss": "^3.4.15",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^5.4.19",
    "vitest": "^2.1.8"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
