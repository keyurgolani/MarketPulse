# Test Environment Configuration
NODE_ENV=test
PORT=3001

# Database Configuration
DATABASE_URL=./data/test-marketpulse.db

# Redis Configuration (optional - will fallback to memory cache)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=1

# Logging Configuration
LOG_LEVEL=warn

# CORS Configuration
CORS_ORIGINS=http://localhost:5173,http://localhost:4173

# Rate Limiting Configuration (more lenient for tests)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# Security
JWT_SECRET=test-secret-key

# API Keys (use demo keys for tests to avoid rate limiting)
YAHOO_FINANCE_API_KEY_1=demo-test-key-1
YAHOO_FINANCE_API_KEY_2=demo-test-key-2
YAHOO_FINANCE_API_KEY_3=demo-test-key-3
GOOGLE_FINANCE_API_KEY_1=demo-test-key-1
GOOGLE_FINANCE_API_KEY_2=demo-test-key-2

# Test-specific configurations
USE_MOCK_DATA=true
DISABLE_EXTERNAL_APIS=false
DISABLE_REDIS=true