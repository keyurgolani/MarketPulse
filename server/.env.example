# Backend Environment Variables (Required)
# Copy this file to .env and configure with your values

# Server Configuration
NODE_ENV=development
PORT=3001
HOST=localhost

# Database Configuration
DATABASE_URL=./data/marketpulse.db

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Redis Configuration (Optional - fallback to memory cache)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# External API Keys (Required for full functionality)
YAHOO_FINANCE_API_KEY=your_yahoo_finance_api_key_here
GOOGLE_FINANCE_API_KEY=your_google_finance_api_key_here
NEWS_API_KEY=your_news_api_key_here
FINNHUB_API_KEY=your_finnhub_api_key_here

# Authentication & Security
JWT_SECRET=your_super_secure_jwt_secret_here_min_32_chars
SESSION_SECRET=your_super_secure_session_secret_here_min_32_chars
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/marketpulse.log

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS_PER_USER=5

# Cache Configuration
CACHE_TTL_MARKET_DATA=30
CACHE_TTL_NEWS=300
CACHE_TTL_USER_DATA=3600

# External API Configuration
API_TIMEOUT=10000
API_RETRY_ATTEMPTS=3
API_RETRY_DELAY=1000

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_SAMPLE_RATE=0.1

# Security Headers
ENABLE_HELMET=true
ENABLE_CORS=true
ENABLE_COMPRESSION=true